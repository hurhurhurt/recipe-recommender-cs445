%body.background_color
  %h2 Edit Recipe
  = form_tag recipe_path(@recipe), :method => :put do
    = label :recipe, :recipe_name, 'Name', :class => 'col-form-label'
    = text_field :recipe, :recipe_name, :class => 'form-control'
    = label :recipe, :ingredients, 'Ingredients', :class => 'col-form-label'
    = text_field :recipe, :ingredients, :class => 'form-control'
    = label :recipe, :calories, 'Calories', :class => 'col-form-label'
    = number_field :recipe, :calories, :class => 'form-control'
    = label :recipe, :food_type, 'Food Type', :class => 'col-form-label'
    = select :recipe, :food_type, ['Chicken','Beef', 'Pork','Dessert','Vegetarian'], {}, {:class => 'form-control col-1'}
    = label :recipe, :cooking_time, 'Cooking Time', :class => 'col-form-label'
    = number_field :recipe, :cooking_time, :class => 'form-control'
    %br/
    = submit_tag 'Update Recipe Info', :class => 'btn btn-primary'
    = link_to 'Cancel', recipes_path, :class => 'btn btn-secondary givemargin'